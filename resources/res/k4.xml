<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/widget_container" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:id="@+id/cover_background" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp" android:src="@drawable/widget_rectangle_background" android:adjustViewBounds="true" android:layout_above="@+id/player_container" android:contentDescription="@null"/>
    <ImageView android:id="@+id/app_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_widget_icon" android:scaleType="center" android:layout_alignLeft="@+id/cover_background" android:layout_alignTop="@+id/cover_background" android:layout_alignRight="@+id/cover_background" android:layout_alignBottom="@+id/cover_background" android:contentDescription="@string/open_vlc"/>
    <ImageView android:id="@+id/cover" android:layout_width="match_parent" android:layout_height="wrap_content" android:src="@drawable/ic_widget_icon" android:adjustViewBounds="true" android:layout_alignLeft="@+id/cover_background" android:layout_alignTop="@+id/cover_background" android:layout_alignRight="@+id/cover_background" android:layout_alignBottom="@+id/cover_background"/>
    <ImageView android:id="@+id/player_container_background" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/widget_rectangle_background" android:layout_alignLeft="@+id/player_container" android:layout_alignTop="@+id/player_container" android:layout_alignRight="@+id/player_container" android:layout_alignBottom="@+id/player_container"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/player_container" android:padding="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <TextView android:textSize="16sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/app_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:text="@string/widget_default_text" android:fontFamily="sans-serif-medium"/>
        <TextView android:textColor="@color/white" android:ellipsize="end" android:id="@+id/songName" android:paddingTop="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Track" android:maxLines="1" android:paddingStart="8dp" android:paddingEnd="8dp"/>
        <TextView android:textColor="@color/white" android:ellipsize="end" android:id="@+id/artist" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="4dp" android:text="Author" android:maxLines="1" android:paddingStart="8dp" android:paddingEnd="8dp"/>
        <include layout="@layout/widget_content_full_player"/>
    </LinearLayout>
    <ImageView android:id="@+id/widget_configure" android:background="@drawable/widget_touch_background" android:layout_width="48dp" android:layout_height="48dp" android:scaleType="center" android:layout_alignTop="@+id/cover_background" android:layout_alignRight="@+id/cover_background" android:contentDescription="@string/configure_widget"/>
</RelativeLayout>
