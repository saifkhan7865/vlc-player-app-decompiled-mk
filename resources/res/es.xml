<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:tag="layout/vlc_login_dialog_0" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:padding="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:id="@+id/text" android:tag="binding_1" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="8dp" android:minWidth="600dp" android:layout_alignParentTop="true"/>
        <com.google.android.material.textfield.TextInputLayout android:id="@+id/login_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="8dp" android:layout_below="@+id/text">
            <EditText android:id="@+id/login" android:tag="binding_2" android:layout_width="match_parent" android:layout_height="wrap_content" android:minWidth="192dp" android:hint="@string/login" android:singleLine="true" android:inputType="textNoSuggestions"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout android:id="@+id/password_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="8dp" android:layout_below="@+id/login_container">
            <EditText android:id="@+id/password" android:layout_width="match_parent" android:layout_height="wrap_content" android:minWidth="200dp" android:hint="@string/password" android:singleLine="true" android:inputType="textPassword"/>
        </com.google.android.material.textfield.TextInputLayout>
        <CheckBox android:id="@+id/store" android:tag="binding_3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="4dp" android:text="@string/store_password" android:layout_below="@+id/password_container" android:layout_alignParentStart="true"/>
        <TextView android:id="@+id/warning" android:tag="binding_4" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="8dp" android:text="@string/encryption_warning" android:layout_below="@+id/store"/>
        <Button android:textSize="14sp" android:id="@+id/cancel" android:tag="binding_5" android:focusable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/cancel" android:layout_below="@+id/warning" android:layout_toStartOf="@+id/action" style="@style/VLCDialogButton"/>
        <Button android:textSize="14sp" android:id="@+id/action" android:tag="binding_6" android:focusable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/ok" android:layout_below="@+id/warning" android:layout_marginStart="@dimen/default_margin" android:layout_marginEnd="8dp" android:layout_alignParentEnd="true" style="@style/VLCDialogButton"/>
    </RelativeLayout>
</ScrollView>
