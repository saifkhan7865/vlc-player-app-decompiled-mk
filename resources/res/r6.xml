<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <org.videolan.libvlc.util.VLCVideoLayout android:id="@+id/video_layout" android:fitsSystemWindows="false" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <androidx.appcompat.widget.ViewStubCompat android:id="@+id/player_overlay_tips" android:layout="@layout/player_tips" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <FrameLayout android:id="@+id/player_overlay_background" android:fitsSystemWindows="true" android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView android:layout_gravity="center" android:id="@+id/renderer_background_cone" android:layout_width="wrap_content" android:layout_height="wrap_content" app:srcCompat="@drawable/ic_renderer_background_cone"/>
        <androidx.appcompat.widget.ViewStubCompat android:layout_gravity="center" android:id="@+id/player_info_stub" android:layout="@layout/player_overlay_info" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/default_margin"/>
        <RelativeLayout android:id="@+id/player_ui_container" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/progress_overlay">
            <ImageView android:id="@+id/player_overlay_loading" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true" android:top="40dp" app:srcCompat="@drawable/ic_cone_o"/>
        </RelativeLayout>
        <androidx.appcompat.widget.ViewStubCompat android:layout_gravity="center" android:id="@+id/player_overlay_settings_stub" android:layout="@layout/player_overlay_settings" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/default_margin" android:layout_marginBottom="@dimen/default_margin" android:layout_marginEnd="@dimen/default_margin"/>
        <androidx.appcompat.widget.ViewStubCompat android:layout_gravity="center" android:id="@+id/player_seek_stub" android:fitsSystemWindows="false" android:layout="@layout/player_overlay_seek" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <androidx.appcompat.widget.ViewStubCompat android:layout_gravity="top|right|center_vertical|center_horizontal|center|end" android:id="@+id/player_hud_right_stub" android:layout="@layout/player_hud_right" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/overlay_margin" android:layout_marginTop="@dimen/overlay_margin" android:layout_marginRight="@dimen/overlay_margin" android:layout_marginBottom="@dimen/overlay_margin"/>
        <androidx.appcompat.widget.ViewStubCompat android:layout_gravity="bottom" android:id="@+id/player_hud_stub" android:layout="@layout/player_hud" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="@dimen/overlay_margin" android:layout_marginRight="@dimen/overlay_margin" android:layout_marginBottom="@dimen/overlay_margin"/>
        <androidx.appcompat.widget.ViewStubCompat android:id="@+id/player_resize_stub" android:layout="@layout/player_resize" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <androidx.appcompat.widget.ViewStubCompat android:id="@+id/player_orientation_stub" android:layout="@layout/player_orientation" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </FrameLayout>
    <androidx.appcompat.widget.ViewStubCompat android:id="@+id/player_brightness_stub" android:layout="@layout/player_overlay_brightness" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/tv_overscan_horizontal" android:layout_marginBottom="@dimen/default_margin" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    <androidx.appcompat.widget.ViewStubCompat android:id="@+id/player_volume_stub" android:layout="@layout/player_overlay_volume" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/tv_overscan_horizontal" android:layout_marginBottom="@dimen/default_margin" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
    <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/video_playlist_container" android:background="@color/playerbackground" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:maxWidth="480dp" android:layout_centerHorizontal="true">
        <ImageButton android:id="@+id/close_button" android:background="?attr/selectableItemBackgroundBorderless" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="@+id/playlist_search_text" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="@+id/playlist_search_text" app:srcCompat="@drawable/ic_close_small"/>
        <com.google.android.material.textfield.TextInputLayout android:id="@+id/playlist_search_text" android:paddingLeft="8dp" android:paddingRight="8dp" android:visibility="visible" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:textCursorDrawable="@drawable/cursor_w" app:boxStrokeColor="@color/grey200" app:hintTextColor="@color/grey200" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toEndOf="@+id/close_button" app:layout_constraintTop_toTopOf="0">
            <EditText android:id="@+id/playlist_search_edittext" android:focusable="true" android:nextFocusDown="@+id/video_playlist" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/search_hint" android:inputType="textFilter" android:imeOptions="actionSearch"/>
        </com.google.android.material.textfield.TextInputLayout>
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/video_playlist" android:focusable="true" android:nextFocusUp="@+id/playlist_search_edittext" android:descendantFocusability="afterDescendants" android:layout_width="match_parent" android:layout_height="0dp" android:layout_marginTop="8dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/playlist_search_text"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.appcompat.widget.ViewStubCompat android:id="@+id/player_options_stub" android:layout="@layout/player_options" android:layout_width="match_parent" android:layout_height="match_parent"/>
</RelativeLayout>
