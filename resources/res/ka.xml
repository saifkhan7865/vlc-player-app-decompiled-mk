<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginBottom="@dimen/default_margin" android:layout_weight="1">
    <TextView android:textSize="10sp" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="+20dB"/>
    <org.videolan.vlc.gui.view.VerticalSeekBarContainer android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="150dp">
        <com.google.android.material.slider.Slider android:id="@+id/equalizer_seek" android:layout_width="0dp" android:layout_height="0dp" app:labelBehavior="2" app:tickVisible="false"/>
    </org.videolan.vlc.gui.view.VerticalSeekBarContainer>
    <TextView android:textSize="10sp" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="-20dB"/>
    <TextView android:textSize="10sp" android:layout_gravity="center_horizontal" android:id="@+id/equalizer_band" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="16kHz"/>
    <TextView android:textSize="10sp" android:textColor="?attr/font_audio_light" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/band_value" android:layout_width="match_parent" android:layout_height="wrap_content" android:fontFamily="sans-serif-medium"/>
</LinearLayout>
