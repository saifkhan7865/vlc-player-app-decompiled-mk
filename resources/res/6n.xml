<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:title="@string/interface_prefs_screen" android:key="ui_category">
    <ListPreference android:entries="@array/daynight_mode_entries" android:title="@string/daynight_title" android:key="app_theme" android:summary="%s" android:defaultValue="-1" android:entryValues="@array/daynight_mode_values"/>
    <CheckBoxPreference android:title="@string/tv_ui_title" android:key="tv_ui" android:summary="@string/tv_ui_summary" app:singleLineTitle="false"/>
    <ListPreference android:title="@string/set_locale" android:key="set_locale" android:defaultValue=""/>
    <ListPreference android:persistent="true" android:entries="@array/list_title_ellipsize_list" android:title="@string/list_title_ellipsize" android:key="list_title_ellipsize" android:summary="%s" android:defaultValue="0" android:entryValues="@array/list_title_ellipsize_values"/>
    <CheckBoxPreference android:title="@string/show_headers" android:key="show_headers" android:summary="@string/show_headers_summary" android:defaultValue="true" app:singleLineTitle="false"/>
    <CheckBoxPreference android:title="@string/tv_folders_first" android:key="tv_folders_first" android:summary="@string/tv_folders_first_summary" android:defaultValue="true" app:isPreferenceVisible="false" app:singleLineTitle="false"/>
