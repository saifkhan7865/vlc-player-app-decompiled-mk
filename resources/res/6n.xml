    <CheckBoxPreference android:title="@string/browser_show_missing_media" android:key="include_missing" android:summary="@string/browser_show_missing_media_summary" android:defaultValue="true" app:singleLineTitle="false"/>
    <PreferenceScreen android:title="@string/sleep_title" android:key="default_sleep_timer" android:defaultValue="-1" app:singleLineTitle="false"/>
    <PreferenceCategory android:title="@string/video" android:key="ui_video_category">
        <CheckBoxPreference android:title="@string/media_seen" android:key="media_seen" android:summary="@string/media_seen_summary" android:defaultValue="true" app:singleLineTitle="false"/>
        <CheckBoxPreference android:title="@string/force_play_all_title" android:key="force_play_all_video" android:summary="@string/force_play_all_summary" android:defaultValue="false" app:singleLineTitle="false"/>
        <CheckBoxPreference android:title="@string/show_video_thumbnails" android:key="show_video_thumbnails" android:summary="@string/show_video_thumbnails_summary" android:defaultValue="true" app:singleLineTitle="false"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/audio" android:key="ui_audio_category">
        <CheckBoxPreference android:title="@string/audio_resume_card_title" android:key="audio_resume_card" android:summary="@string/audio_resume_card_summary" android:defaultValue="true" app:singleLineTitle="false"/>
        <CheckBoxPreference android:title="@string/force_play_all_audio_title" android:key="force_play_all_audio" android:summary="@string/force_play_all_audio_summary" android:defaultValue="false" app:singleLineTitle="false"/>
        <CheckBoxPreference android:title="@string/lockscreen_cover_title" android:key="lockscreen_cover" android:summary="@string/lockscreen_cover_summary" android:defaultValue="true" app:singleLineTitle="false"/>
        <CheckBoxPreference android:title="@string/show_seek_in_compact_notif_title" android:key="show_seek_in_compact_notification" android:summary="@string/show_seek_in_compact_notif_summary" android:defaultValue="false" app:singleLineTitle="false"/>
    </PreferenceCategory>
</androidx.preference.PreferenceScreen>
