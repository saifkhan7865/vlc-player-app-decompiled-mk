<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:title="@string/video_prefs_category" android:key="video_category">
    <CheckBoxPreference android:title="@string/audio_boost_title" android:key="audio_boost" android:summary="@string/audio_boost_summary" android:defaultValue="true" app:iconSpaceReserved="false" app:singleLineTitle="false"/>
    <PreferenceCategory android:title="@string/gestures" app:iconSpaceReserved="false">
        <CheckBoxPreference android:title="@string/enable_volume_gesture_title" android:key="enable_volume_gesture" android:summary="@string/enable_volume_gesture_summary" android:defaultValue="true" app:iconSpaceReserved="false" app:singleLineTitle="false"/>
        <CheckBoxPreference android:title="@string/enable_brightness_gesture_title" android:key="enable_brightness_gesture" android:summary="@string/enable_brightness_gesture_summary" android:defaultValue="true" app:iconSpaceReserved="false" app:singleLineTitle="false"/>
        <CheckBoxPreference android:title="@string/enable_swipe_seek_title" android:key="enable_swipe_seek" android:summary="@string/enable_swipe_seek_summary" android:defaultValue="true" app:iconSpaceReserved="false" app:singleLineTitle="false"/>
        <CheckBoxPreference android:title="@string/enable_scale_gesture_title" android:key="enable_scale_gesture" android:summary="@string/enable_scale_gesture_summary" android:defaultValue="true" app:iconSpaceReserved="false" app:singleLineTitle="false"/>
        <CheckBoxPreference android:title="@string/enable_double_tap_seek_title" android:key="enable_double_tap_seek" android:summary="@string/enable_double_tap_seek_summary" android:defaultValue="true" app:iconSpaceReserved="false" app:singleLineTitle="false"/>
        <org.videolan.vlc.gui.view.NumberPickerPreference android:dependency="enable_double_tap_seek" android:defaultValue="10" app:iconSpaceReserved="false" app:key="video_double_tap_jump_delay" app:title="@string/video_double_tap_jump_delay"/>
        <CheckBoxPreference android:title="@string/enable_double_tap_play_title" android:key="enable_double_tap_play" android:summary="@string/enable_double_tap_play_summary" android:defaultValue="true" app:iconSpaceReserved="false" app:singleLineTitle="false"/>
        <ListPreference android:entries="@array/video_screenshot" android:title="@string/enable_video_screenshot" android:key="screenshot_mode" android:summary="%s" android:defaultValue="0" android:entryValues="@array/video_screenshot_values" app:iconSpaceReserved="false" app:singleLineTitle="false"/>
        <CheckBoxPreference android:title="@string/enable_tap_and_hold_fastplay_title" android:key="enable_fastplay" android:summary="@string/enable_tap_and_hold_fastplay_summary" android:defaultValue="false" app:iconSpaceReserved="false" app:singleLineTitle="false"/>
        <ListPreference android:entries="@array/fastplay_speed_entries" android:title="@string/fastplay_speed_title" android:key="fastplay_speed" android:summary="%s" android:dependency="enable_fastplay" android:defaultValue="2" android:entryValues="@array/fastplay_speed_values" app:iconSpaceReserved="false" app:singleLineTitle="false"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/player_controls" app:iconSpaceReserved="false">
        <CheckBoxPreference android:title="@string/enable_seek_buttons" android:key="enable_seek_buttons" android:summary="@string/enable_seek_buttons_summary" android:defaultValue="false" app:iconSpaceReserved="false" app:singleLineTitle="false"/>
        <org.videolan.vlc.gui.view.NumberPickerPreference android:dependency="enable_seek_buttons" android:defaultValue="10" app:iconSpaceReserved="false" app:key="video_jump_delay" app:title="@string/jump_delay"/>
        <org.videolan.vlc.gui.view.NumberPickerPreference android:dependency="enable_seek_buttons" android:defaultValue="20" app:iconSpaceReserved="false" app:key="video_long_jump_delay" app:title="@string/long_jump_delay"/>
        <CheckBoxPreference android:title="@string/popup_keepscreen_title" android:key="popup_keepscreen" android:summary="@string/popup_keepscreen_summary" android:defaultValue="false" app:iconSpaceReserved="false" app:singleLineTitle="false"/>
        <SeekBarPreference android:max="16" android:title="@string/video_hud_timeout" android:key="video_hud_timeout_in_s" android:summary="%s" android:defaultValue="4" app:iconSpaceReserved="false" app:min="1" app:seekBarIncrement="1" app:singleLineTitle="false" app:updatesContinuously="true"/>
    </PreferenceCategory>
</androidx.preference.PreferenceScreen>
